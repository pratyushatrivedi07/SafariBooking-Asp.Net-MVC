@model Jungle.Entities.Gate

@{
    ViewData["Title"] = "Edit";
}
<link href="~/css/EditGate.css" rel="stylesheet" />


@if (TempData["Message"] != null)
{
    <partial name="_alerts" />
}


@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{

    <div class="col-md-4 offset-md-4">
        <form asp-action="Edit" class="login-box">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GateId" class="control-label"></label>
                <input asp-for="GateId" readonly class="form-control" />
                <span asp-validation-for="GateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParkId" class="control-label"></label>
                <select asp-for="ParkId" asp-items="@ViewBag.ParkId" class="form-control">
                    <option value="value" selected="selected">please select</option>
                </select>
                <span asp-validation-for="ParkId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a style="position:relative;text-decoration:none; color:black; border:none; margin-top:100%; padding: 8px 8px; border-radius:4px;" asp-action="Index" class="foot btn-warning">Back to Gate List</a>
            </div>
        </form>
    </div>
}




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
