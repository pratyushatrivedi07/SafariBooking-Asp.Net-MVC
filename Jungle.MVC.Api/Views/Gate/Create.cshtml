@model Jungle.Entities.Gate

@{
    ViewData["Title"] = "Create";
}
<link href="~/css/CreateGate.css" rel="stylesheet" />

@if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{ 
<div class="col-md-4   offset-md-4">
    <form asp-action="Create" class="login-box">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ParkId" class="control-label">Park</label>
            <select asp-for="ParkId" class="form-control" asp-items="@ViewBag.ParkId">
                <option value="" selected disabled>Select..</option>
            </select>
            <span asp-validation-for="ParkId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Add" class="btn btn-primary" />
            <a style="position:relative;left:20px;text-decoration:none; color:black; border:none; margin-top:100%; padding: 8px 8px; border-radius:4px;" asp-action="Index" class="foot btn-warning">Back to Gate List</a>
        </div>
    </form>
</div>
}




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
