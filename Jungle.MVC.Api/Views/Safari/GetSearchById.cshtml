@model Jungle.MVC.Api.Models.BookingViewModel

@{
    ViewData["Title"] = "GetSearchById";
}

@if (TempData["Message"] != null)
{
    <partial name="_alerts" />
}

<link href="~/css/BookDetail.css" rel="stylesheet" />


<div class="body">
    <h4 style="text-align:center;text-decoration:dashed; margin-top: 30px;">Booking Details</h4>
    <div class="row d-flex justify-content-center">
        <div class="col-md-4">
            <form asp-action="GetSearchById" method="post">
                <div class="form-group">
                    <label style="margin-top: 20px;" class="control-label">Search By Booking Id</label>
                    <input name="Id" required class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    @if (Model != null)
    {
        <table class="d-flex justify-content-center">
            <tr>
                <td>   @Html.DisplayNameFor(model => model.ParkName)</td>
                <td>     @Html.DisplayFor(model => model.ParkName)</td>
            </tr>
            <tr>
                <td>   @Html.DisplayNameFor(model => model.SafariName)</td>
                <td>     @Html.DisplayFor(model => model.SafariName)</td>
            </tr>
            <tr>
                <td>   @Html.DisplayNameFor(model => model.VName)</td>
                <td>     @Html.DisplayFor(model => model.VName)</td>
            </tr>
            <tr>
                <td>   @Html.DisplayNameFor(model => model.GateName)</td>
                <td>     @Html.DisplayFor(model => model.GateName)</td>
            </tr>
            <tr>
                <td>   @Html.DisplayNameFor(model => model.TotalCost)</td>
                <td>     @Html.DisplayFor(model => model.TotalCost)</td>
            </tr>

        </table>
        <button class="btn btn-danger d-flex justify-content-center">@Html.ActionLink("Cancel Booking ", "DeleteBooking", new { id = Model.BookingId }, new { @style = "position:relative; text-decoration:none; color: white; border: none; margin-top:100 %; padding: 5px 8px;", onclick = " return confirm('Are u sure want to delete?')" })</button>
    }
</div>










